# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# MongoDB Configuration
MONGO_URL=mongodb://your-production-mongo-host:27017
DB_NAME=lvl_up_agency_production

# JWT Authentication - CHANGE THIS!
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-SECRET-32-CHARS-MIN

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# AI Service Configuration
AI_API_KEY=your-production-ai-api-key
AI_BASE_URL=https://oi-server.onrender.com/chat/completions

# ElevenLabs Voice Service
ELEVENLABS_API_KEY=your-production-elevenlabs-key
ELEVENLABS_BASE_URL=https://elevenlabs-proxy-server-lipn.onrender.com/v1

# Email Service (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# Security
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_SECRET=CHANGE-THIS-TO-A-STRONG-SECRET
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/lvl-up-agency/app.log

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
